@model TayBac_28_06_17.Models.EntityModels.benhvien

@{
    ViewBag.Title = "Add hospital";
  //  Layout = "~/Views/Layouts/_AdminLayout.cshtml";
}

@section Header{
    Thêm bệnh viện
}
@section Script{
    <script src="~/Scripts/Controller/LoadAddress.js"></script>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="rose">
                    <i class="material-icons">perm_identity</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">
                        Thêm bệnh viện
                        <small class="text-success"> @ViewBag.Susscess</small>
                        <small class="text-danger"> @Html.ValidationSummary(true)</small>

                    </h4>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group is-empty">
                                    <label class="control-label">Id bệnh viện @Html.ValidationMessageFor(model => model.idbv)</label>
                                    @Html.TextBoxFor(model => model.idbv, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group is-empty">

                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group is-empty">
                                    <label class="control-label">Tên bệnh viện @Html.ValidationMessageFor(model => model.tenbv)</label>
                                    @Html.TextBoxFor(model => model.tenbv, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">IP @Html.ValidationMessageFor(model => model.IP)</label>
                                    @Html.TextBoxFor(model => model.IP, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group is-empty">
                                    <label class="control-label">Fax @Html.ValidationMessageFor(model => model.fax)</label>
                                    @Html.TextBoxFor(model => model.fax, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="form-group is-empty">
                                    <label class="control-label">Điện thoại @Html.ValidationMessageFor(model => model.dienthoai)</label>
                                    @Html.TextBoxFor(model => model.dienthoai, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group is-empty">
                                    <label class="control-label">Tỉnh / TP @Html.ValidationMessageFor(model => model.idtinh)</label>
                                    @Html.DropDownListFor(model => model.idtinh, new SelectList(ViewBag.getListTinhs, "Value", "Text"), new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group is-empty">
                                    <label class="control-label">Quận / Huyện @Html.ValidationMessageFor(model => model.idhuyen)</label>
                                    @Html.DropDownListFor(model => model.idhuyen, new SelectList(ViewBag.getListHuyens, "Value", "Text"), new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-md-4">

                                <div class="form-group is-empty">
                                    <label class="control-label">Xã / phường @Html.ValidationMessageFor(model => model.idxa)</label>
                                    @Html.DropDownListFor(model => model.idxa, new SelectList(ViewBag.getListXas, "Value", "Text"), new { @class = "form-control" })
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <button type="submit" class="btn btn-rose pull-right">Thêm bệnh viện</button>
                        </div>


                        <div class="clearfix"></div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div>
        <a href="@Url.Action(actionName: "Alls", controllerName: "Hospital")">Back to List</a>
    </div>

</div>