@model TayBac_28_06_17.Models.EntityModels.benhnhan

@{
    ViewBag.Title = "Edit patient";
    bool check = false;
    if ((Session[TayBac_28_06_17.Commons.Constants.SESSION_GROUPID] as string) == TayBac_28_06_17.Commons.Constants.G_ADMIN
                 || (Session[TayBac_28_06_17.Commons.Constants.SESSION_GROUPID] as string) == TayBac_28_06_17.Commons.Constants.G_MANAGER
                 || (Session[TayBac_28_06_17.Commons.Constants.SESSION_GROUPID] as string) == TayBac_28_06_17.Commons.Constants.G_STAFF
       )
    {
        check = true;
    }
}
@section Header{
    Tài khoản người dùng
}
@section Script{
    <script src="~/Scripts/Controller/LoadAddress.js"></script>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                @using (Html.BeginForm("Edit", "Patient", FormMethod.Post, new { @id = "TypeValidation", @class = "form-horizontal", @novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="card-header card-header-text" data-background-color="rose">
                        <h4 class="card-title">Sửa thông tin tài khoản</h4>
                    </div>
                    <div class="card-content">
                        <div class="row" hidden>
                            @Html.TextBoxFor(model => model.idbn, new { @value = Model.idbn, @type = "hidden" })
                            @Html.TextBoxFor(model => model.idbv, new { @value = Model.idbv, @type = "hidden" })
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Nguời dùng</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    <span disabled class="form-control">@Model.idbn</span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.tenbn)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Mã y tế</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    <span disabled class="form-control">@Model.mayt</span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.mayt)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Số lưu trữ</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    <span disabled class="form-control">@Model.soluutru</span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.mayt)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Bệnh viện</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    <span disabled class="form-control">@Model.benhvien.tenbv</span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.idbv)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Họ tên</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    @Html.TextBoxFor(model => model.tenbn, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.tenbn)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Điện thoại</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>

                                    @Html.TextBoxFor(model => model.dienthoai, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.dienthoai)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Email</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.email)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Ngày sinh</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    @Html.TextBoxFor(model => model.ngaysinh, new { @class = "form-control datepicker" })

                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.ngaysinh)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Địa chỉ</label>
                            <div class="col-sm-2">
                                <div class="form-group label-floating column-sizing is-empty">
                                    <label class="control-label"></label>
                                    @Html.DropDownListFor(model => model.idxa, new SelectList(ViewBag.getListXas, "Value", "Text"), new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group label-floating column-sizing is-empty">
                                    <label class="control-label"></label>
                                    @Html.DropDownListFor(model => model.idhuyen, new SelectList(ViewBag.getListHuyens, "Value", "Text"), new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group label-floating column-sizing is-empty">
                                    <label class="control-label"></label>
                                    @Html.DropDownListFor(model => model.idtinh, new SelectList(ViewBag.getListTinhs, "Value", "Text"), new { @class = "form-control" })
                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <div class="col-sm-1">
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code></code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Nghề nghiệp</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    @Html.TextBoxFor(model => model.nghenghiep, new { @class = "form-control" })

                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.nghenghiep)</code>
                            </label>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 label-on-left">Nơi làm việc</label>
                            <div class="col-sm-7">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label"></label>
                                    @Html.TextBoxFor(model => model.noilamviec, new { @class = "form-control" })

                                    <span class="material-input"></span>
                                </div>
                            </div>
                            <label class="col-sm-3 label-on-right">
                                <code>@Html.ValidationMessageFor(model => model.noilamviec)</code>
                            </label>
                        </div>
                        @if (check)
                        {
                            <div class="row">
                                <label class="col-sm-2 label-on-left">Mật khẩu</label>
                                <div class="col-sm-7">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label"></label>
                                        @Html.TextBoxFor(model => model.pass, new { @class = "form-control", @type = "password" })

                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <label class="col-sm-3 label-on-right">
                                    <code>@Html.ValidationMessageFor(model => model.pass)</code>
                                </label>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-rose btn-fill">Cập nhập</button>
                    </div>
                }

            </div>
        </div>
    </div>
    <div>
        <a href="@Url.Action(actionName: "Alls", controllerName: "Patient")">Back to List</a>
    </div>
</div>

