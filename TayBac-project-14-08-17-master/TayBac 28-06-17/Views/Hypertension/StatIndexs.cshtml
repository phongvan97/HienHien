@section scripts {
    <script type="text/javascript">
        window.onload = function () {
            $.getJSON('jsonStatIndexs', {
                tagmode: "any",
                format: "json"
            }).done(function (data) {
                var dataChart = [];
                var dataPoint = [];
                var datConverted = [];
                var cao = [];
                var binhthuong = [];
                var thap = [];
                for (i = 0; i < data.length; i++) {
                    var tmp = data[i];
                    cao.push(data[i][0]);
                    binhthuong.push(data[i][1]);
                    thap.push(data[i][2]);
                }
                datConverted.push(cao);
                datConverted.push(binhthuong);
                datConverted.push(thap);
                for (i = 0; i < datConverted.length; i++) {
                    if (i == 0) {
                        dataChart.push({
                            type: "column",
                            name: "",
                            legendText: "Cao",
                            showInLegend: true,
                            dataPoints: [
				                { label: "Mạch", y: datConverted[i][0] },
				                { label: "Nhịp thở", y: datConverted[i][1] },
				                { label: "BMI", y: datConverted[i][2] }
                            ]
                        });
                    }
                    else if(i == 1){
                        dataChart.push({
                            type: "column",
                            name: "",
                            legendText: "Bình thường",
                            showInLegend: true,
                            dataPoints: [
				                { label: "Mạch", y: datConverted[i][0] },
				                { label: "Nhịp thở", y: datConverted[i][1] },
				                { label: "BMI", y: datConverted[i][2] }
                            ]
                        });
                    }
                    else if(i == 2){
                        dataChart.push({
                            type: "column",
                            name: "",
                            legendText: "Thấp",
                            showInLegend: true,
                            dataPoints: [
				                { label: "Mạch", y: datConverted[i][0] },
				                { label: "Nhịp thở", y: datConverted[i][1] },
				                { label: "BMI", y: datConverted[i][2] }
                            ]
                        });
                    }
                }
                //var dataPoints
                var chart = new CanvasJS.Chart("chartContainer",
                {
                    title: {
                        text: "Thống kê chỉ số mạch, huyết áp, nhịp thởi, cân nặng, chiều cao ",
                        fontFamily: "Helvetica"
                    },
                    theme: "theme3",
                    animationEnabled: true,
                    legend: {
                        verticalAlign: "center",
                        horizontalAlign: "left",
                        fontSize: 20,
                        fontFamily: "Helvetica"
                    },
                    data: dataChart
                });
                chart.render();
            });

        }
    </script>
}

