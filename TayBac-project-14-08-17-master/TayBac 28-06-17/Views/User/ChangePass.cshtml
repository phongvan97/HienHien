
@{
    ViewBag.Title = "Change pass";
    // Layout = "~/Views/Layouts/_StaffLayout.cshtml";
}
@section Header {
    Tài khoản người dùng
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                @using (Html.BeginForm("ChangePass", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-header card-header-text" data-background-color="rose">
                        <h4 class="card-title">Thay đổi mật khẩu</h4>
                    </div>
                    <div class="card-content">
                        
                        <small class="text-success">@ViewBag.Success</small>
                        <small class="text-danger">@ViewBag.Err4</small>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">
                                Mật khẩu hiện tại
                                <small class="text-danger">@ViewBag.Err3</small>
                            </label>
                            <input class="form-control" name="oldPass" type="password" required="true" aria-required="true">
                            <span class="material-input"></span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">
                                Mật khẩu mới
                                <small class="text-danger">@ViewBag.Err1</small>
                            </label>
                            <input class="form-control" name="newPass1" type="password" required="true" aria-required="true">
                            <span class="material-input"></span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">
                                Nhập lại
                                <small class="text-danger">@ViewBag.Err2</small>
                            </label>
                            <input class="form-control" name="newPass2" type="password" required="true" aria-required="true">
                            <span class="material-input"></span>
                        </div>
                        <div class="form-footer text-right">
                            <button type="submit" class="btn btn-rose btn-fill">Cập nhập</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
